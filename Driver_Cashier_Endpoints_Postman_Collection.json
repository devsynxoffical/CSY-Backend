	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Driver Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set(\"driverToken\", jsonData.data.token);",
									"        pm.environment.set(\"driverId\", jsonData.data.driver.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"driver@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/driver/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"driver",
								"login"
							]
						},
						"description": "Login as driver to get authentication token"
					},
					"response": []
				},
				{
					"name": "Cashier Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
