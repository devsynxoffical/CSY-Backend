								"deliver"
							],
							"variable": [
								{
									"key": "orderId",
									"value": "",
									"description": "Order ID to deliver (UUID format)"
								}
							]
						},
						"description": "Mark order as delivered. Sets actual_delivery_time field and updates order status to 'completed'. Order must be in 'in_delivery' status."
					},
					"response": []
				}
