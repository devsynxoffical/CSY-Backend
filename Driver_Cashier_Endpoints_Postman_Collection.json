									"        pm.environment.set(\"cashierToken\", jsonData.data.token);",
									"        pm.environment.set(\"cashierId\", jsonData.data.cashier.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
