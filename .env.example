# ============================================
# CoreSY Backend - Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3119
CORS_ORIGIN=http://localhost:3119

# ============================================
# PostgreSQL Database Configuration
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password@localhost:5432/csy_db?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/csy_db?schema=public

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# AWS S3 Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=csy-uploads

# ============================================
# Stripe Payment Configuration
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Email Configuration (Nodemailer)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=CoreSY <noreply@coresy.com>

# ============================================
# QR Code Configuration
# ============================================
QR_CODE_EXPIRY_MINUTES=5
QR_CODE_SECRET=your-qr-code-secret-key

# ============================================
# Platform Fee Configuration
# ============================================
PLATFORM_FEE_PERCENTAGE=2
DISCOUNT_PERCENTAGE=10

# ============================================
# Backup Configuration
# ============================================
BACKUP_S3_BUCKET=csy-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_CRON=0 2 * * *

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
